<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon.png">
    <!-- Datatable -->
    <link href="/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <!-- Custom Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">

</head>


<body>



    <div class="row page-titles mx-0 shadow">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>ALL CATEGORY</h4>
                {{!-- <span class="ml-1">Datatable</span> --}}
            </div>
        </div>

    </div>
    <!-- row -->


    <div>
        <a href="/admin/add-category" class="btn btn-primary mb-3 shadow-sm">Add New Category</a>
    </div>

    <div class="row ">

        <div class="col-12">
            <div class="card shadow-sm">

                <div class="card-body shadow">
                    <div class="table-responsive">
                        <table id="example2" class="display " style="width:100%;color: black;">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Category Name</th>
                                    <th>Sub Categories</th>
                                    {{!-- <th>Landing Price</th> --}}
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody> {{#each categories}}
                                <tr>
                                    <td>1</td>
                                    <td>{{this.category}}</td>
                                    <td>

                                        <ul>
                                            {{#each Scategory}}
                                            <li>
                                                {{this}}
                                            </li>

                                            {{/each}}
                                        </ul>


                                    </td>
                                    {{!-- <td>{{this.Scategory}}</td> --}}
                                    {{!-- <td>61</td> --}}
                                    <td>
                                        <a type="button" class="btn btn-primary" href="/admin/edit-category/{{this._id}}">Edit</a>
                                        <a type="button" class="btn btn-danger"
                                            href="/admin/delete-category/{{this._id}}" name="{{this.category}}"
                                            onclick="deleteCategory(event)">Delete</a>
                                    </td>

                                </tr>



                                {{/each}}


                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="/vendor/global/global.min.js"></script>
    <script src="/js/quixnav-init.js"></script>
    <script src="/js/custom.min.js"></script>



    <!-- Datatable -->
    <script src="/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/js/plugins-init/datatables.init.js"></script>
</body>

</html>