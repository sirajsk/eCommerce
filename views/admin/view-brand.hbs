<link href="/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
<!-- Custom Stylesheet -->
<link href="/css/style.css" rel="stylesheet">


<div class="row page-titles mx-0 mt-3 mb-4 shadow">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>All Brand</h4>
            {{!-- <span class="ml-1">Datatable</span> --}}
        </div>
    </div>

</div>


<div>
    <a href="/admin/add-brand" class="btn btn-primary mb-3 shadow">Add New Brand</a>
</div>
<div class="row">

    <div class="col-12">
        <div class="card">
            <div class="card-body shadow" >
                <div class="table-responsive">
                    <table id="example2" class="display" style="width:100%;color: black;">
                        <thead>
                            <tr>
                                <th>Brand Logo</th>
                                <th>Brand Name</th>
                                <th>No Of Item</th>
                                <th ></th>
                                <th></th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each brands}}
                            <tr>
                                <td>
                                    <img style="width: 50px; height: 50px;" src="https://skebuy.ml/brand-images/{{this._id}}.jpg">
                                </td>
                                <td>{{this.Name}}</td>
                                <td>2</td>
                                <td></td>
                                <td></td>
                                 <td>
                                        <a type="button" class="btn btn-primary" href="/admin/edit-brand/{{this._id}}"><i class="fas fa-edit"></i></a>
                                        <a type="button" class="btn btn-danger" href="/admin/delete-brand/{{this._id}}" name="{{this.brand}}"
                    onclick="deleteBrand(event)"><i class="fa fa-trash-o " style="color: blanchedalmond;"></a>
                                    </td>
                            </tr>

                           {{/each}}
                        </tbody>
                      
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


