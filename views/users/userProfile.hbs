

<body style="background-color: #eee;">
  <div class="container py-5" style="margin-top: 6rem;">
    <div class="row">
    
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-chat/ava3.png" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{user.name}}</h5>
            {{!-- <p class="text-muted mb-1">Full Stack Developer</p> --}}
            <p class="text-muted mb-4">{{user.address.[town]}}</p>
            <div class="d-flex justify-content-center mb-2">
              <a href="/orders" type="button" class="btn btn-primary">ORDERS</a>
              <a href="/change-address" type="button" class="btn btn-outline-primary ms-1">Edit Address</a>
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
         
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.name}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.mobile}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Mobile</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.mobile}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"></p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          {{#if address}}
          {{#each address}}
          <div class="col-sm-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Full Name: {{this.FirstName}} {{this.LastName}}</h5>
                <p class="card-text">House Name{{this.House}} <br>Town: {{this.Town}} <br> PIN: {{this.PIN}}<br></p>
                 <a href="/delete-U-Add/{{this._id}}" onclick="DeleteAddress(event)" class="btn btn-danger">Delete Address</a>
                <a href="/edit-U-Add/{{this._id}}" class="btn btn-success">Edit Address</a>

              </div>
            </div>
          </div>
          {{/each}}
          {{/if}}
          <div class="col-sm-6 mb-5">
            <div class="card">
              <div class="card-body">

                <a href="/add-new-profile-add" class="btn btn-success">Add New Address</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    
    function DeleteAddress(event) {
      event.preventDefault();
      var link = event.currentTarget.href;
      var name = event.currentTarget.name;
      Swal.fire({
        title: 'Are you sure?',
        text: "Do you want to delete " + name,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes'
      }).then((result) => {
        if (result.isConfirmed) {
        
          window.location = link;
        }
        else {
          return false;
        }
      })
    }

  </script>
</body>