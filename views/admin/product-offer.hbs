<script>
    $(document).ready(function () {
       
            let today = new Date()
           
            var dd = today.getDate();
            var mm = today.getMonth() + 1;

            var yyyy = today.getFullYear();
            if (dd < 10) {
                dd = '0' + dd;
            }
            if (mm < 10) {
                mm = '0' + mm;
            }
            today = yyyy + '-' + mm + '-' + dd;
           $('#str').attr('min',today)
           
        $('#str').change(function () {
             let date = document.getElementById('str').value
           
            $('#exp').attr('min',date)
            
        })
       
    })
</script>