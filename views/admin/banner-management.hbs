<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width,initial-scale=1">

<!-- Favicon icon -->
<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon.png">
<!-- Datatable -->
<link href="/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
<!-- Custom Stylesheet -->
<link href="/css/style.css" rel="stylesheet">


<div class="row page-titles mx-0 mt-3 mb-4 shadow">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>All Banners</h4>
          
        </div>
    </div>

</div>

<div class="row">

<div>
    <a href="/admin/add-Banner" class="btn btn-primary mb-3 shadow ">Add 1'st Banner</a>
</div>

<div>
    <a href="/admin/add-Second-Banner" class="btn btn-primary mb-3 shadow ml-3">Add 2nd Banner</a>
</div>


</div>

<div class="row">

    <div class="col-12">
        <div class="card">
           
            <div class="card-body shadow" >
                <div class="table-responsive">
                    <table id="example2" class="display" style="width:100%;color: black;">
                        <thead>
                            <tr>
                                <th>Banner Logo</th>
                                <th>Banner Name</th>
                                <th>Banner Discription</th>
                                <th >Root</th>
                                <th></th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each  banner}}
                            <tr>
                                <td>
                                    <img style="width: 50px; height: 50px;" src="/banner/{{this._id}}.jpg" >
                                </td>
                                <td>{{this.Name}}</td>
                                <td>{{this.Discription}}</td>
                                <td>{{this.Action}}</td>
                                <td></td>
                                 <td>
                                        <a href="/admin/edit-banner/{{this._id}}" type="button" class="btn btn-primary" >Edit</a>
                                        <a href="/admin/delete-banner/{{this._id}}" type="button" class="btn btn-danger" onclick="return confirm('Are You Want To Delete {{this.Name}}?')"  name="">Delete</a>
                                           
                                    </td>
                            </tr>
                            {{/each}}
                          
                        </tbody>
                      
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/vendor/global/global.min.js"></script>
<script src="/js/quixnav-init.js"></script>
<script src="/js/custom.min.js"></script>



